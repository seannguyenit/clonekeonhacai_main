extend layout

block header
    include header.pug

block content
    #content.site-content
        .ast-container
            #primary.content-area.primary
                main#main.site-main
                    article#post-2.post-2.page.type-page.status-publish.has-post-thumbnail.ast-article-single
                        header.entry-header.ast-header-without-markup.entry-content.clear
                            h1 #{title}
                            #fullwidthMobi
                                .wrap-keonhacai
                                    .heading_table
                                        //- include select-date.pug
                                        if data && data.matchDateList
                                            each league in data.matchDateList
                                                //- hr
                                                //- div.giaidau.d-flex
                                                //-     img(src=`http://asset.asiasport.com/${data.logo}`, alt=`${league.leagueName}`)
                                                //-     h3 #{league.matchDate}
                                                //- hr
                                                each match in league.matchList
                                                    .match
                                                        .matchdate #{match.matchDate}
                                                        .trandau 
                                                            .matchtime #{match.matchStatus}
                                                            .team 
                                                                .hometeam
                                                                    img(src=`http://asset.asiasport.com/${match.opponents[0].logo}`, alt=`${match.opponents[0].name}`, width="25px")
                                                                    span #{match.opponents[0].name}
                                                                .awayteam
                                                                    img(src=`http://asset.asiasport.com/${match.opponents[1].logo}`, alt=`${match.opponents[1].name}`, width="25px")
                                                                    span #{match.opponents[1].name}
                                                            .tyso
                                                                span #{match.opponents[0].score||'-'}
                                                                //- span -
                                                                span #{match.opponents[1].score||'-'}
                                        else    
                                            span Không có dữ liệu



            include left-menu.pug


block footer
    include footer.pug